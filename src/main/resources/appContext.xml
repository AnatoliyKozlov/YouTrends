<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="jdbc.properties, settings.properties"/>

    <bean id="bannedTagDAO" class="system.access.BannedTagDAO">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="bannedChannelDAO" class="system.access.BannedChannelDAO">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="userDAO" class="system.access.UserDAO">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean class="system.Starter">
        <constructor-arg name="telegram" ref="telegram"/>
    </bean>

    <bean id="telegram" class="system.Telegram">
        <constructor-arg name="settings" ref="settings"/>
    </bean>

    <bean class="system.parser.YouTubeParser"/>

    <bean id="settings" class="system.shared.Settings">
        <constructor-arg name="botName" value="${botName}"/>
        <constructor-arg name="botToken" value="${botToken}"/>
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${jdbc.driverClassName}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
    </bean>

</beans>